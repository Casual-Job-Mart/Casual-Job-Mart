<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">




    <TextView
        android:id="@+id/textViewKeyword1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:fontFamily="serif"
        android:text="what "
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewKeyword2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textViewKeyword1"
        android:layout_toEndOf="@+id/textViewKeyword1"
        android:text="job title or keywords"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editTextKeywords"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewKeyword1"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@drawable/ic_search_black_24dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="18sp"
        android:imeOptions="actionSearch" />

    <TextView
        android:id="@+id/textViewPlace1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textViewKeyword1"
        android:layout_below="@+id/editTextKeywords"
        android:fontFamily="serif"
        android:text="where "
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewPlace2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textViewPlace1"
        android:layout_toEndOf="@+id/textViewPlace1"
        android:text="city or province"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editTextPlace"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewPlace1"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@drawable/ic_baseline_place_24px"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="18sp"
        android:imeOptions="actionSearch" />

    <ListView
        android:id="@+id/listViewJobList"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextPlace"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp" />

</RelativeLayout>
