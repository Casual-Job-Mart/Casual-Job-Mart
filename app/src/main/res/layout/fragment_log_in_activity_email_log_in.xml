<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.company.casual_job_mart.casualJobMart.LogInActivityEmailLogInFragment">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="138dp"
        android:gravity="center_vertical"
        android:text="Casual-Job Mart"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/LogInActiviFragmentVertificationCodeEditText"
        android:text="Please enter a valid phone or email address to continue"
        android:textAlignment="center"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/LogInActivityEmailLogInFragmentEmailEditText"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="177dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="text" />

    <EditText
        android:id="@+id/LogInActivityEmailLogInFragmentPasswordEditText"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="177dp"
        android:ems="10"
        android:hint="Retype Password"
        android:inputType="textPassword"
        android:visibility="visible" />

    <Button
        android:id="@+id/LogInActivityEmailLogInFragmentNextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="27dp"
        android:layout_marginEnd="30dp"
        android:text="Next" />

    <Button
        android:id="@+id/LogInActivityEmailLogInFragmentRegisterButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/LogInActivityEmailLogInFragmentNextButton"
        android:layout_marginStart="30dp"
        android:text="Register" />



</RelativeLayout>
